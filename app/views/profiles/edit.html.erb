<% content_for(:title, t('.title')) %>
<div class="mask d-flex align-items-center h-100" style="background-color: #f2faef;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-5 col-md-8">
        <div class="bg-white rounded shadow-5-strong p-5">
          <h4 class="row justify-content-center mb-4"><%= t '.title' %></h4>
          <%= form_with model: @user, url: profile_path, local: true do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <!-- Email input -->
            <div class="form-group mb-4">
              <%= f.label :email %>
              <%= f.email_field :email, class: 'form-control' %>
            </div>

            <!-- name input -->
            <div class="form-group mb-4">
              <%= f.label :name %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>

            <!-- Password confirmation input -->
            <div class="form-group mb-4">
              <%= f.label :sns %>
              <%= f.text_field :sns, class: 'form-control' %>
            </div>
            <!-- Submit button -->
            <div class="form-group mb-4">
              <%= f.submit class: 'btn btn-register', style: 'width: 100%;' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>