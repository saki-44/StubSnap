<% content_for(:title, t('.title')) %>
<div class="mask d-flex align-items-center h-100" style="background-color: #f2faef;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-5 col-md-8">
        <div class="bg-white rounded shadow-5-strong p-5">
          <h4 class="row justify-content-center mb-4"><%= t '.title' %></h4>
          <table class="table">
            <tr>
              <th scope="row"><%= t(User.human_attribute_name(:email)) %></th>
              <td><%= current_user.email %></td>
            </tr>
            <tr>
              <th scope="row"><%= t(User.human_attribute_name(:name)) %></th>
              <td><%= current_user.name %></td>
            </tr>
            <tr>
              <th scope="row"><%= t(User.human_attribute_name(:sns)) %></th>
              <td><%= current_user.sns %></td>
            </tr>
          </table>
            <!-- Submit button -->
          <div class="col text-center">
            <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-register', style: 'width: 100%;' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>