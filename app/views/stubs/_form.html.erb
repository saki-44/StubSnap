<%= form_with model: stub, data: { turbo: false } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="row g-3">
    <div class="form-group">
      <%= f.label :stub_image %>
      <%= f.file_field :stub_image, onchange: 'previewFileWithId("preview")', class: 'form-control mb-3', accept: 'image/' %>
      <%= f.hidden_field :stub_image_cache %>
    </div>
    <div class='mt-3 mb-3'>
      <%= image_tag stub.stub_image.url,
                    id: 'preview',
                    size: '200x300' %>
    </div>

    <div class="col-md-6">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="col-md-6">
      <%= f.label :date %>
      <%= f.date_field :date, class: 'form-control' %>
    </div>

    <div class="col-md-6">
      <%= f.label :address %>
      <%= f.text_field :address, class: 'form-control' %>
    </div>
    <div class="col-md-6">
      <%= f.label :category_id, I18n.t('forms.labels.category') %>
      <%= f.select :category_id, 
      options_for_select(@categories.map { |c| [I18n.t("categories.#{c.name}"), c.id] }, @stub.category_id),
      { prompt: I18n.t('forms.prompts.select_category') },
      { class: 'form-control' } %>
    </div>
    <div class="col-md-6">
      <%= f.label :memo %>
      <%= f.text_area :memo, class: 'form-control', rows: 6 %>
    </div>
    <div class="col-md-6">
    <%= f.label :status %><br>
    <%= f.radio_button :status, 'published' %> <%= f.label :status, t('activerecord.attributes.stub.published'), value: 'published' %>
    <%= f.radio_button :status, 'unpublished' %> <%= f.label :status, t('activerecord.attributes.stub.unpublished'), value: 'unpublished' %>
  </div>
    </div>
      <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
