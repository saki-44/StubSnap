<%= search_form_for @q, url: url do |f| %>
  <div class="input-group mb-3">
    <%= f.search_field :title_or_memo_cont, class: 'form-control', placeholder: t('defaults.search_word') %>
    
    <%= f.collection_select :category_id_eq, @categories, :id, :translated_name, { include_blank: t('defaults.select_category') }, class: 'form-control' %>   

    <div class="input-group-append">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>