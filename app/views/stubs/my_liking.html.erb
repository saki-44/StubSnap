<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="d-flex justify-content-center mt-4">
    <div class="col-md-6">
      <!-- 検索フォーム -->
      <%= search_form_for @q, url: my_liking_stubs_path do |f| %>
        <div class="d-flex">
          <div class="input-group me-3 w-50">
            <%= f.collection_select :stub_category_id_eq, @categories, :id, :translated_name, { include_blank: t('defaults.select_category') }, class: 'form-select' %>
          </div>
          <div class="input-group">
            <%= f.search_field :stub_title_or_stub_memo_cont, class: 'form-control', placeholder: t('defaults.search_word') %>
            <%= f.submit class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 掲示板一覧 -->
  <div class="row mt-5">
    <div class="col-12">
      <div class="row">
        <% if @liked_stubs.present? %>
          <%= render @liked_stubs %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
      <%= paginate @liked_stubs %>
    </div>
  </div>
</div>