<% content_for(:title, t('.title')) %>
<div class="mask d-flex align-items-center h-100" style="background-color: #f2faef;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-5 col-md-8">
        <div class="bg-white rounded shadow-5-strong p-5">
          <h4 class="row justify-content-center mb-4"><%= t '.title' %></h4>
          <%= form_with url: login_path, local: true do |f| %>
            <!-- Email input -->
            <div class="form-group mb-4">
              <%= f.label :email, User.human_attribute_name(:email)%>
              <%= f.text_field :email, class: 'form-control' %>
            </div>

            <!-- Password input -->
            <div class="form-group mb-4">
              <%= f.label :password, User.human_attribute_name(:password) %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>

            <!-- Submit button -->
            <div class="form-group mb-4">
              <%= f.submit (t 'defaults.login'), class: 'btn btn-register', style: 'width: 100%;' %>
            </div>
          <% end %>
          <div class="col text-center">
            <%= link_to (t '.to_register_page'), new_user_path, class: "me-4" %>
            <%= link_to (t '.password_forget'), new_password_reset_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>