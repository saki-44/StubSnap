<% content_for(:title, t('.title')) %>
<div class="mask d-flex align-items-center h-100" style="background-color: #f2faef;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-5 col-md-8">
        <div class="bg-white rounded shadow-5-strong p-5">
          <div class="row justify-content-center mb-4"><%= t '.title' %></div>
          <%= form_with model: @user, local: true do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <!-- name input -->
            <div class="form-group mb-4">
              <%= f.label :name %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>

            <!-- Email input -->
            <div class="form-group mb-4">
              <%= f.label :email %>
              <%= f.email_field :email, class: 'form-control' %>
            </div>

            <!-- Password input -->
            <div class="form-group mb-4">
              <%= f.label :password %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>

            <!-- Password confirmation input -->
            <div class="form-group mb-4">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
            <!-- Submit button -->
            <div class="form-group mb-4">
              <%= f.submit (t 'defaults.register'), class: 'btn btn-register', style: 'width: 100%;' %>
            </div>
          <% end %>
          <div class="col text-center">
          <%= link_to (t '.to_login_page'), login_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>